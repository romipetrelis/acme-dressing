@model Acme.Dressing.Web.ViewModels.DressFormViewModel


<h2>Acme Dressing</h2>

<div class="col-md-3">
    <h4>Commands</h4>
    <ul>
        <li>1: Put on footwear</li>
        <li>2: Put on headwear</li>
        <li>3: Put on socks</li>
        <li>4: Put on shirt</li>
        <li>5: Put on jacket</li>
        <li>6: Put on pants</li>
        <li>7: Leave the house</li>
        <li>8: Remove pajamas</li>
    </ul>
</div>

<div class="col-md-9">
    <h4>Get Dressed</h4>
    
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <form method="post">
        <div class="form-group">
            <label>Temperature Type</label>
            @Html.DropDownListFor(m => m.TemperatureTypeText, Model.AvailableTemperatureTypes, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Command List</label>
            <input class="form-control" required name="commandList" placeholder="Ex: 8, 6, 4, 2, 1, 7" value="@Model.CommandList" />
        </div>

        <div class="well">
            <p>@Model.ResponseMessage</p>
        </div>

        <input type="submit" class="btn btn-primary" value="Dress!" />
    </form>
</div>
